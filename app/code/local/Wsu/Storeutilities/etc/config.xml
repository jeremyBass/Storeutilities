<config>
  <modules>
    <Wsu_Storeutilities>
      <version>0.1.0</version>
    </Wsu_Storeutilities>
  </modules>
  <admin>
	<layout>
		<updates>
			<StructuredData>
				<file>storeutilities.xml</file>
			</StructuredData>
		</updates>
	</layout>
  </admin>
	<stores>
		<admin>
			<design>
				<package>
					<name>default</name>
				</package>
				<theme>
					<default>wsu_base</default>
				</theme>
			</design>
    	</admin>
	</stores>
  <global>
    <resources>
      <storeutilities_setup>
        <setup>
          <module>Wsu_Storeutilities</module>
          <class>Wsu_Storeutilities_Model_Resource_Setup</class>
        </setup>
      </storeutilities_setup>
    </resources>
    <blocks>
      <storeutilities>
        <class>Wsu_Storeutilities_Block</class>
      </storeutilities>
      <!-- <checkout>
			<class>Wsu_Storeutilities_Block</class>
		</checkout>-->
      <checkout>
        <rewrite>
          <cart_sidebar>Wsu_Storeutilities_Block_Cart_Sidebar</cart_sidebar>
          <cart_item_renderer>Wsu_Storeutilities_Block_Cart_Item_Renderer</cart_item_renderer>
        </rewrite>
      </checkout>
		<page>
			<rewrite>
				<html_head>Wsu_Storeutilities_Block_Html_Head</html_head>
			</rewrite>
		</page>
	<adminhtml><!-- rewrite admin head block --> 
        <rewrite>
            <page_head>Wsu_Storeutilities_Block_Adminhtml_Page_Head</page_head>
        </rewrite>
    </adminhtml>

    </blocks>
    <helpers>
      <storeutilities>
        <class>Wsu_Storeutilities_Helper</class>
      </storeutilities>
      <checkout>
        <rewrite>
          <url>Wsu_Storeutilities_Helper_Url</url>
          <!--<cart>Wsu_Storeutilities_Helper_Cart</cart>-->
        </rewrite>
      </checkout>
    </helpers>
    <models>
		<catalog>
			<rewrite>
				<product>Wsu_Storeutilities_Model_Product</product>
			</rewrite>
		</catalog>
	</models>
    
  </global>
  <default>
    <adminhtml>
      <acl>
        <resources>
          <all>
            <title>Allow Everything</title>
          </all>
          <admin>
            <children>
              <storeutilities_conf module="storeutilities">
                <title>General</title>
                <sort_order>10</sort_order>
              </storeutilities_conf>
              <system>
                <children>
                  <config>
                    <children>
                      <storeutilitiesinfo>
                        <title>General Info</title>
                      </storeutilitiesinfo>
                      <storeutilities_conf>
                        <title>DiVA tab</title>
                      </storeutilities_conf>
                    </children>
                  </config>
                </children>
              </system>
            </children>
          </admin>
        </resources>
      </acl>
    </adminhtml>
  </default>
  
